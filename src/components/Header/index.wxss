/** 常用色值 **/
/** 常用字体大小 **/
.header {
  background: #fff;
}
.header .header-top {
  height: 60px;
  line-height: 60px;
  padding: 0 20px;
  text-align: right;
}
.header .header-top .logo {
  line-height: 60px;
  text-align: left;
  font-size: 18px;
}
.header .header-top .logo img {
  height: 40px;
  vertical-align: middle;
}
.header .header-top .logo span {
  margin-left: 10px;
}
.header .header-top a {
  margin-left: 40px;
}
.header .breadcrumb {
  height: 40px;
  line-height: 40px;
  padding: 0 20px;
  border-top: 1px solid #f9c700;
}
.header .breadcrumb .breadcrumb-title {
  text-align: center;
  font-size: 16px;
}
.header .breadcrumb .breadcrumb-title:after {
  position: absolute;
  left: 77px;
  top: 39px;
  content: "";
  border-top: 10px solid #fff;
  border-left: 15px solid transparent;
  border-right: 15px solid transparent;
}
.header .breadcrumb .weather {
  text-align: right;
}
.header .breadcrumb .weather .date {
  margin-right: 10px;
  vertical-align: middle;
}
.header .breadcrumb .weather .weather-img {
  margin-right: 10px;
}
.header .breadcrumb .weather .weather-img img {
  height: 20px;
}
.header .breadcrumb .weather .weather-detail {
  vertical-align: middle;
}
.simple-page .header-top {
  background: #1890ff;
  color: #fff;
}
